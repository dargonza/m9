<h1><%= @article.title %></h1>
<hr>
<ul>
    <li><%= link_to "Editar", edit_article_path(@article) %></li>
    <li>
        <%= link_to "Eliminar", 
            article_path(@article),
            method: :destroy,            
            data: { confirm: 'Esta seguro de eliminar el articulo' } 
        %>            
    </li>  

</ul>
<p><%= @article.body %></p>


<h2>Comentarios</h2>
<%= render 'comments/comment', article: @article %> 


<h3>Nuevo Comentario</h3>
<%= render 'comments/form', article: @article %> 