<%= form_with model: [ @article, @article.comments.build ] do |f| %>
    
    <p>
        <%= f.label :commenter, 'Nombre:' %><br>
        <%= f.text_field :commenter %>
    <p>

    <p>
        <%= f.label :body, 'Comentario:' %><br>
        <%= f.text_area :body %>
    </p>


    <p><%= f.submit 'Enviar'%></p>    

<% end %>